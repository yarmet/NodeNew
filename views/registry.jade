extends layout
block content

    link(rel='stylesheet', href='/stylesheets/login.css')

    div.container
        div.row
            div.col-lg-4
            div.col-lg-4
                div#loginBlock
                    h3 Зарегистрироваться в айти
                    div.form-group
                        input#username.form-control(type="username",name="username", placeholder="логин", oninput="updateState()")
                    div.form-group
                        input#password.form-control(type="password",name="password", placeholder="пароль",oninput="updateState()")
                    div.form-group
                        input#repeat.form-control(type="password",name="repeat_password", placeholder="повторить пароль", oninput="updateState()")
                    button#submit.btn.btn-default регистрация
                    br
                    br
                    a(href="/login") войти
                    p#errorstatus
            div.col-lg-4

        script(src="/javascripts/ajax.js")
        script(src="/javascripts/registry.js")