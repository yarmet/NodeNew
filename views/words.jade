extends layout
block content

    include panel.jade

    style(type='text/css').
        .modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            padding-top: 100px; /* Location of the box */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0, 0, 0); /* Fallback color */
            background-color: rgba(0, 0, 0, 0.4); /* Black w/ opacity */
        }

        /* Modal Content */
        .modal-content {
            position: relative;
            background-color: #ffffff;
            margin: auto;
            width: 500px;
            height: 100px;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            -webkit-animation-name: animatetop;
            -webkit-animation-duration: 0.4s;
            animation-name: animatetop;
            animation-duration: 0.4s
        }

        /* Add Animation */
        @-webkit-keyframes animatetop {
            from {
                top: -300px;
                opacity: 0
            }
            to {
                top: 0;
                opacity: 1
            }
        }

        @keyframes animatetop {
            from {
                top: -300px;
                opacity: 0
            }
            to {
                top: 0;
                opacity: 1
            }
        }

        /* The Close Button */
        .close {
            color: #000000;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }
        .modal-header {
            text-align: center;
            padding: 0 16px;
            background-color: #ffffff;
        }

        .modal-body > *{
            margin: auto 1px;
        }

        #table{
            border-collapse: collapse;
        }
        #table td{
            border: 1px solid black;
            padding: 10px;
        }

    div.container
        h1 словарь

        a#myBtn(href="#") Добавить слово

        div#myModal.modal
            div.modal-content
                div.modal-header
                    span.close &times;
                div.modal-body.form-inline
                    input#rusInput.form-control(type="text" placeholder="русский")
                    input#engInput.form-control(type="text" placeholder="английский")
                    button#save.btn.btn-success сохранить

        button#load.btn.btn-success загрузить еще
        table#table

    script(src="/javascripts/words.js")